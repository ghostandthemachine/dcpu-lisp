#!/usr/bin/env node

var fs = require('fs');
var comp = require("../compiler.js");
var args = process.argv.slice(2);

var src;
var expand = false;
var compiled1 = false;
var compiled2 = false;
var linearized = false;

if(args[0] == '-p') {
    expand = true;
    args = args.slice(1);
}

if(args[0] == '-c1') {
    compiled1 = true;
    args = args.slice(1);
}

if(args[0] == '-c2') {
    compiled2 = true;
    args = args.slice(1);
}

if(args[0] == '-l') {
    linearized = true;
    args = args.slice(1);
}

if (args[0] == '-e') {
    src = args[1];
    args = args.slice(2);
}
else {
    src = fs.readFileSync(args[0], 'utf-8');
    args = args.slice(1);
}

if(expand) {
    comp["print-expand"](src);
}
else if(compiled1) {
    comp["print-compiled-phase1"](src);
}
else if(compiled2) {
    comp["print-compiled-phase2"](src);
}
else if(linearized) {
    comp["print-linearized"](src);
}
else {
    comp.compile(src);
}
